<div class="form-group msg-form">
    <%= form_with(model: [@single_room, @message], remote: true, class: 'd-flex',
        data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    <%= f.text_area :body, id: 'chat-text', class: 'form-control msg-content', autocomplete: 'off' %>
    <%= f.submit data: {disable_with: false}, class: 'btn btn-warning btn-sm' %>
    <% end %>
</div>